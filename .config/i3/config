## KEYBINDINGS ##

# Use Mouse+$SUPER to drag floating windows to their wanted position
floating_modifier $SUPER

# kill focused window
bindsym $ALT+Shift+Q kill

# start a terminal
bindsym  $ALT+Return    exec  $TERMINAL

bindsym $ALT + l bash ~/bin/Lockscreen/lock

bindsym $SUPER + w bash ~/bin/cw

# start a program launcher
bindsym $ALT+d exec j4-dmenu-desktop --dmenu="dmenu -i -fn 'fira-10' -l 10"
bindsym $ALT+Shift+d exec bash ~/bin/rofi-apps

# dropdown terminal
bindsym $ALT+p exec tdrop -a -w 2144 -h 400 -x 8 -y 990 urxvt

# emulate mouse (requires xdotool):
bindsym  $SUPER+h            exec  --no-startup-id  xdotool   mousemove_relative  --         -20     0
bindsym  $SUPER+j            exec  --no-startup-id  xdotool   mousemove_relative  0          20
bindsym  $SUPER+k            exec  --no-startup-id  xdotool   mousemove_relative  --         0       -20
bindsym  $SUPER+l            exec  --no-startup-id  xdotool   mousemove_relative  20         0
bindsym  $SUPER+space        exec  --no-startup-id  xdotool   click               1          #       left    click
bindsym  $CAPS+space       exec  --no-startup-id  xdotool   click               2          #       middle  click

bindsym  $ALT+Shift+space  exec  --no-startup-id  xdotool   click               3          #       right   click

# emulate pok3r:
bindcode  --release  $CAPS+$DEAD_CIRCUMFLEX  exec  --no-startup-id  xdotool  key  `
bindsym   --release  $CAPS+h                 exec  --no-startup-id  xdotool  key  Left
bindsym   --release  $CAPS+j                 exec  --no-startup-id  xdotool  key  Down
bindsym   --release  $CAPS+k                 exec  --no-startup-id  xdotool  key  Up
bindsym   --release  $CAPS+l                 exec  --no-startup-id  xdotool  key  Right
bindsym   --release  $CAPS+'                 exec  --no-startup-id  xdotool  key  Delete

# change focus
bindsym  $ALT+h  focus  left
bindsym  $ALT+j  focus  down
bindsym  $ALT+k  focus  up
bindsym  $ALT+l  focus  right

# alternatively, you can use the cursor keys:
bindsym  $ALT+Left   focus  left
bindsym  $ALT+Down   focus  down
bindsym  $ALT+Up     focus  up
bindsym  $ALT+Right  focus  right

# move focused window
bindsym  $ALT+Shift+H  move  left
bindsym  $ALT+Shift+J  move  down
bindsym  $ALT+Shift+K  move  up
bindsym  $ALT+Shift+L  move  right

# alternatively, you can use the cursor keys:
bindsym  $ALT+Shift+Left   move  left
bindsym  $ALT+Shift+Down   move  down
bindsym  $ALT+Shift+Up     move  up
bindsym  $ALT+Shift+Right  move  right

# split in horizontal orientation
bindsym $SUPER+b split h;exec notify-send "Tiling Horizontally"

# split in vertical orientation
bindsym $SUPER+v split v;exec notify-send "Tiling Vertically"

# Change container layout to stacked | tabbed | toggle split
bindsym $SUPER+s layout stacking
bindsym $SUPER+w layout tabbed
bindsym $SUPER+e layout default

# toggle tiling / floating
bindsym $SUPER+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $SUPER+space focus mode_toggle

# focus the parent container
bindsym $SUPER+a focus parent

# focus the child container
bindsym $SUPER+y focus child

# mouse settings
# The middle button over a titlebar kills the window
# bindsym --release button2 kill

# The right button toggles floating
# bindsym button3 floating toggle
# bindsym $ALT+button3 floating toggle

# The side buttons move the window around
# bindsym button9 move left
# bindsym button8 move right

## WORKSPACE RULES ##


#http://fontawesome.io/cheatsheet/

# ws names
set $ws1 "&#xf120;"
set $ws2 "&#xf115;"
set $ws3 "&#xf269;"
set $ws4 "&#xf1bc;"
set $ws5 "&#xf1e2;"
#set $ws5 V
#set $ws6 VI
#set $ws7 VII
#set $ws8 VIII
#set $ws9 IX
#set $ws10 X


# Go to workspace
bindsym $ALT+1 workspace $ws1;layout floating
bindsym $ALT+2 workspace $ws2;layout tabbed
bindsym $ALT+3 workspace $ws3;layout stacking
bindsym $ALT+4 workspace $ws4
bindsym $ALT+5 workspace $ws5

# Move focused container to workspace
bindsym $ALT+Shift+1 move container to workspace $ws1
bindsym $ALT+Shift+2 move container to workspace $ws2
bindsym $ALT+Shift+3 move container to workspace $ws3
bindsym $ALT+Shift+4 move container to workspace $ws4
bindsym $ALT+Shift+5 move container to workspace $ws5

#navigate workspaces next / previous
bindsym $ALT+Ctrl+Right workspace next
bindsym $ALT+Ctrl+Left workspace prev

# orientation for new workspaces
default_orientation horizontal

